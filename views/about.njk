<!-- Vai a página layout.html e leva o conteúdo do block content junto  -->
{% extends "layout.njk" %}

{% block head %}
    <title>Sobre - {{ about.name }}</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <a href="https://github.com/lanzath" target="_blank"><img src="{{ about.avatar_url }}" alt="Lanza"></a>
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.description }}</p>
    </div>

    <div id="links-footer" class="links">
        {% for link in about.links%}
            <a href="{{ link.url }}" target="_blank"> {{ link.name }}</a>
        {% endfor %}
    </div>
{% endblock %}

